<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borderbox_bg"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/blackbell" />

    <TextView
        android:id="@+id/Reminderdate"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/Remindertime"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/Reminderdate"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/Reminderhospital"
        android:layout_below="@id/Reminderdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/cardview_shadow_start_color"
        android:textStyle="italic"
        />

    <TextView
        android:layout_below="@id/Reminderhospital"
        android:id="@+id/Questionsford"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/cardview_shadow_start_color"
        android:textStyle="italic"
        />

    </RelativeLayout>

</LinearLayout>
