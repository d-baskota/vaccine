<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReminderForm"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/schedular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule On :"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/da"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/remdate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:hint="date"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:inputType="date"
        android:textColor="@color/black"
        android:background="@drawable/borderbox_bg"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:gravity="right"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

        <TextView
            android:id="@+id/remtime"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/borderbox_bg"
            android:gravity="center"
            android:hint="__ : __"
            android:inputType="time"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital Name :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/hospitalname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:padding="5dp"
        android:textColor="@color/black"
        android:hint="name of hospital"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:background="@drawable/borderbox_bg"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question for doctor ?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:singleLine="false"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint=" questions here ....."
        android:textColorHint="@color/cardview_shadow_start_color"
        android:textFontWeight="3"
        android:background="@drawable/borderbox_bg"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/setReminder"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Set Reminder" />

    <TextView
        android:id="@+id/remView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

</LinearLayout>