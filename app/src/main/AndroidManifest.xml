<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaccine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vaccine">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.childvaccination.ChildDetails" android:screenOrientation="portrait"/>
        <activity android:name="com.example.childvaccination.ChildinfoActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.example.childvaccination.InformationActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.example.childvaccination.ScheduleActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.example.childvaccination.ReminderForm" android:screenOrientation="portrait"/>
        <activity android:name="com.example.childvaccination.InformationDetailsActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.example.childvaccination.SchedulesDate" android:screenOrientation="portrait"/>
    </application>

</manifest>